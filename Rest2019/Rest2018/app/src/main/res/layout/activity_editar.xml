<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarActivity"
    android:orientation="vertical"
    android:padding="50dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR USUARIO"
            android:textSize="32dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Nombre:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingVertical="5dp"
            android:textColor="#0A0A0A"
            android:background="@drawable/edt_estilos"
            android:id="@+id/nombres"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Correo:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_estilos"
            android:paddingLeft="10dp"
            android:paddingVertical="5dp"
            android:textColor="#0A0A0A"
            android:id="@+id/apellidos"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Clave:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingVertical="5dp"
            android:textColor="#0A0A0A"
            android:background="@drawable/edt_estilos"
            android:id="@+id/user"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncalcular"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="php"
            android:text="PHP"
            android:textColor="#E6D33A"
            android:layout_weight=".25"/>

        <Button
            android:id="@+id/btnpython"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="python"
            android:text="PYTHON"
            android:textColor="#E6D33A"
            android:layout_weight=".25"/>

        <Button
            android:id="@+id/btnjava"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="java"
            android:text="JAVA"
            android:textColor="#E6D33A"
            android:layout_weight=".25"/>

        <Button
            android:id="@+id/btnnode"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="node"
            android:text="NODE"
            android:textColor="#E6D33A" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncalcular2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="phpA"
            android:text="DEL"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnpython2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="pythonA"
            android:text="DEL"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnjava2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="javaA"
            android:text="DEL"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:id="@+id/btnnode2"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="nodeA"
            android:text="DEL"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/listas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boton_estilos_reset"
            android:onClick="listar"
            android:text="LISTAS"
            android:textColor="#E6D33A" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>